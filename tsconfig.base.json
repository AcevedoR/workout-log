{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.*"
  ]
}
